<!DOCTYPE html>
<html>
<head>
  <title>Simple Social Network</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-toggleable-sm navbar-fixed-top navbar-inverse bg-inverse main-nav">
      <div class="container">
          <ul class="nav navbar-nav">
              <li class="nav-item active">
                  <%= link_to 'Home', root_path, class: 'nav-link' %>
              </li>
          </ul>
          <ul class="nav navbar-nav mx-auto">
              <li class="nav-item">
                <%= link_to 'Simple Socialnet', root_path, class: 'nav-link' %>
              </li>
          </ul>
          <ul class="nav navbar-nav">
              <li class="nav-item">
                  <%= user_html_string(current_user).html_safe %>
              </li>
          </ul>
      </div>
  </nav>
<%= yield %>
<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </li>
<% end %>
</body>
</html>
