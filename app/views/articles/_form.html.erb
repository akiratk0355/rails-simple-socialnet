<%= form_for @article do |f| %>
  <div id="error_explanation">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">ERROR: <%= value %></div>
    <% end %>
  </div>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
