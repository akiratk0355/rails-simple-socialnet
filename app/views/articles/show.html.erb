<h1> <%= @article.title %> </h1>
<p>
  <strong>Author:</strong>
  <%= @article.user.name %>
</p>
<p>
  <%= @article.text %>
</p>

<h3><%= pluralize(@article.comments.count, "comment") %></h3>
<%= render @article.comments %>
 
<h3>Add a comment:</h3>
<%= render 'comments/form' %>

<% if can? :update, @article %>
  <%= link_to 'Edit', edit_article_path(@article) %>
<% end %>
