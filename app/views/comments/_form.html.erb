<%= form_for([@article, @article.comments.build]) do |f| %>
  <div id="error_explanation">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">ERROR: <%= value %></div>
    <% end %>
  </div>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>